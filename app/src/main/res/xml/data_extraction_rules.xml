<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Configuración para backup automático en Android 12+ -->
    <cloud-backup>
        <!-- Excluir caché del backup en la nube -->
        <exclude domain="cache" path="."/>
        <exclude domain="no_backup" path="."/>
    </cloud-backup>

    <!-- Configuración para transferencia directa (ej. migración de dispositivo) -->
    <device-transfer>
        <!-- Permitir migrar todos los archivos excepto caché -->
        <exclude domain="cache" path="."/>
    </device-transfer>

</data-extraction-rules>
